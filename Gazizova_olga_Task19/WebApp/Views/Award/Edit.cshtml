{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Award</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "txt-dang" })
        @Html.HiddenFor(model => model.Id)

