                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "f-ctrl" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "txt-dang" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
